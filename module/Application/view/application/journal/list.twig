<!-- Menu :: Navigation -->
{%
    include "navigation.twig" 
    with
    { 
        'label': 'Journal', 
        'items': [
            {
                'uri': '/journal/create', 
                'label': 'Create'
            }
        ] 
    } 
%}

<!-- List of journals -->
<div class = "content">

	<table width = "100%">
		<thead>
			<tr>
				<th width = "10%">{{ translate( 'ISBN' ) }}             </th>
				<th width = "30%">{{ translate( 'Title' ) }}            </th>
				<th width = "10%">{{ translate( 'Count of numbers' ) }} </th>
				<th width = "12%">{{ translate( 'Creation' ) }}         </th>
			</tr>
		</thead>
		<tbody>
			{% for journal in journals %}
			<tr>
				<td>
					{{ journal.isbn | raw }}
				</td>
				<td>
					<a href = "/journal/{{ journal.id }}">
						{{ journal.isbn | raw }}
					</a>
				</td>
				<td align = "center">
					{{ journal.countNumbers | raw }}
				</td>
				<td align = "center">
					{{ journal.creation | raw }}
				</td>
			</tr>
			{% endfor %}
		</tbody>
        <tfoot>
			<tr>
				<th width = "10%">&nbsp;</th>
				<th width = "30%"></th>
				<th width = "10%"></th>
				<th width = "12%"></th>
			</tr>
		</tfoot>
	</table>

	{# Pager #}
    {% 
        include 
            "pager.twig" 
        with 
            pager( 
                '/journal/list/creation/desc/%s/%s', 
                pages.count, 
                pages.active, 
                pages.countDisplay, 
                pages.countPagesLinks 
            ) 
    %}
	
</div>
