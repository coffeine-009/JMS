<form action = "<?= $this -> action; ?>" method = "post" enctype = "multipart/form-data">

	<div class = "field">
		<label><?= $this -> translate( 'Volume' ); ?>:</label>
		<input type = "text" name = "volume" value = "<?= $this -> data[ 'volume' ]; ?>" />
		<span><?= implode( '<br />', $this -> errors[ 'volume' ] ) ?></span>
	</div>
	
	<div class = "field">
		<label><?= $this -> translate( 'Issue' ); ?>:</label>
		<input type = "text" name = "issue" value = "<?= $this -> data[ 'issue' ]; ?>" />
		<span><?= implode( '<br />', $this -> errors[ 'issue' ] ) ?></span>
	</div>
			
	<input type = "submit" value = "Add"/>

</form>